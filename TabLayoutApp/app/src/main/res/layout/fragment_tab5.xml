<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:textColor="@color/txtmain"
    android:background="@color/bgmain"
    tools:context=".Tab5">


    <Button
        android:id="@+id/startIperfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:typeface="sans"
        android:textSize="18dp"
        android:layout_marginTop="64dp"
        android:text="Start iPerf Server"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stopIperfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:typeface="sans"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="Stop iPerf Server"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/startIperfButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/serverStartedTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="24dp"
        android:textAllCaps="true"
        android:layout_below="@+id/stopIperfButton"
        tools:layout_editor_absoluteX="25dp"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/serverStartedTextView"
        tools:layout_editor_absoluteX="16dp">
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:paddingBottom="80dp"
        android:text=""
        android:textSize="24dp"
        android:layout_below="@+id/serverStartedTextView"
        tools:layout_editor_absoluteX="25dp"
        android:layout_marginTop="16dp" />
    </ScrollView>

</RelativeLayout>